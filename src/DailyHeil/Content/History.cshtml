@model DailyHeil.Functions.Content.Models.HistoryModel;

<!DOCTYPE html>
<html lang="en" dir="ltr">

<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap" rel="stylesheet">

<style>
    html * {
        font-family: 'Noto Sans JP', sans-serif;
    }

    body {
        padding-bottom: 100px;
    }

    hr { 
        border: 0; 
        height: 1px; 
        background-image: -webkit-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -moz-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -ms-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -o-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0); 
    }

    ul {
        list-style-type: none;
    }

    li {
        padding-bottom: 1rem;
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1rem;
        background-color: #efefef;
        text-align: center;
    }

    .title {
        text-align: center;
        font-size: 4vw;
    }

    .graph-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 2rem;
    }

    .graph {
        width: 50%;
        height: 100%;
    }

    .question {
        padding-bottom: 0.5rem;
    }

    .footer-left {
        width: 50%;
        float: left;
        text-align: left;
    }

    .footer-right {
        width: 50%;
        float: left;
        text-align: right;
    }
</style>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="description" content="This website scrapes daily mail articles to see if they have mentioned Hitler">
    <!-- <link rel="icon" type="image/png" href="https://example.com/favicon.png"> TODO sort out a favicon-->
    
    <title>HTDMMHT | History</title>
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-166002468-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-166002468-1');
    </script>

    
</head>

<header>
    <h1 class="title">Has the Daily Mail mentioned Hitler today?</h1>
    <hr>
</header>

<body>
    <div class="graph-container">
        <div class="graph">
            <canvas id="hitler-chart"></canvas>
        </div>
    </div>
</body>

<footer>
    <div class="footer-left">&copy; Tom Gothorp 2020</div>
    <div class="footer-right"><a href="/Index">Home</a> | <a href="/Faq">FAQ</a> | <a href="/History">History</a> | <a href="mailto:contact@hasthedailymailmentionedhitlertoday.com">Contact</a> | <a href="https://github.com/tgothorp/DailyHeil">Source Code</a></div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js" integrity="sha256-TQq84xX6vkwR0Qs1qH5ADkP+MvH0W+9E7TdHJsoIQiM=" crossorigin="anonymous"></script>
<script>
    var context = document.getElementById('hitler-chart').getContext('2d');
    var chart = new Chart(context, {
        type: 'line',
        data: {
            labels: @Model.LabelsString,
            datasets: [
                {
                    label: 'Times Htiler Was Mentioned',
                    data: @Model.DataString,
                    backgroundColor: 'rgba(127, 191, 63, 0.9)',
                    borderColor: 'rgba(1, 1, 1, 1)',
                    showLine: true
                }
            ]
        },
        options: {
            legend: {
                display: true
            },
            elements: {
                line: {
                    tension: 0 // disables bezier curves
                }
            },
             scales: {
                 xAxes: [{
                     display: true
                 }],
                 yAxes: [{
                     display: true,
                     stacked: false,
                     beginAtZero: true
                 }]
             }
        }
    });
</script>

</html>