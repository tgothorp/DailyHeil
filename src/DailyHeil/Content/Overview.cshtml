@model DailyHeil.Functions.Content.Models.OverviewModel;

<!DOCTYPE html>
<html lang="en" dir="ltr">

<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap" rel="stylesheet">

<style>
    html * {
        font-family: 'Noto Sans JP', sans-serif;
    }

    body {
        padding-bottom: 100px;
    }

    hr { 
        border: 0; 
        height: 1px; 
        background-image: -webkit-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -moz-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -ms-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        background-image: -o-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0); 
    }

    ul {
        list-style-type: none;
    }

    li {
        padding-bottom: 1rem;
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1rem;
        background-color: #efefef;
        text-align: center;
    }

    .title {
        text-align: center;
        font-size: 4vw;
    }

    .question {
        padding-bottom: 0.5rem;
    }

    .footer-left {
        width: 50%;
        float: left;
        text-align: left;
    }

    .footer-right {
        width: 50%;
        float: left;
        text-align: right;
    }
    
    .first-row-item {
        float: left;
        width: 50%;
        text-align: center;
    }
    
    .first-row-item h3 {
        font-size: 7.5vw;
        margin: 0;
    }
    
    .first-row-item p {
        margin: 0;
    }
    
    .second-row {
        width: 100%;
        text-align: center;
        float: left;
        padding-top: 5vw;
    }
    
    .second-row-item h3 {
        font-size: 7.5vw;
        margin: 0;
    }
    
    .second-row-item p {
        margin: 0;
    }

</style>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="description" content="This website scrapes daily mail articles to see if they have mentioned Hitler">
    <!-- <link rel="icon" type="image/png" href="https://example.com/favicon.png"> TODO sort out a favicon-->

    <title>HTDMMHT | History</title>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-166002468-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-166002468-1');
    </script>


</head>

<header>
    <h1 class="title">Has the Daily Mail mentioned Hitler today?</h1>
    <hr>
</header>

<body>
<div class="overview-container">
    <div class="first-row">
        <div class="first-row-item">
            <h3>@Model.TotalMentions</h3>
            <br/>
            <p>Total mentions of Hitler since the start of the year</p>
        </div>
        <div class="first-row-item">
            <h3>@Model.AverageMentions</h3>
            <br/>
            <p>Average mentions of Hitler per day</p>
        </div>
    </div>
    <div class="second-row">
        <div class="second-row-item">
            <h3>@Model.MostMentionedCount</h3>
            <br/>
            <p>Most mentions of Hitler in one day</p>
        </div>
    </div>
</div>
</body>

